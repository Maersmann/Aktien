<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Desktop"
      xmlns:UI="clr-namespace:Logic.UI;assembly=Logic.UI" x:Class="UI.Desktop.AktienUebersichtView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding AktienUebersicht ,Source={StaticResource Locator}}">


    <Grid>
        <ListView Margin="10"  ItemsSource="{Binding AlleAktien}" SelectedItem="{Binding SelectedAktie, Mode=TwoWay}" >

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=Name}" Width="250"/>
                    <GridViewColumn Header="ISIN" DisplayMemberBinding="{Binding Path=ISIN}" Width="100"/>
                    <GridViewColumn Header="WKN" DisplayMemberBinding="{Binding Path=WKN}"   Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
